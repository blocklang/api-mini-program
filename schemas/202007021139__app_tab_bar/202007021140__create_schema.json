{
    "id": "create-app-tab-bar",
    "author": "jinzw",
    "changes": [
        {
            "createSchema": {
                "name": "app.TabBar",
                "type": "object",
                "properties": [
                    {
                        "name": "color",
                        "type": "string",
                        "description": "tab 上的文字默认颜色，仅支持十六进制颜色"
                    },
                    {
                        "name": "selectedColor",
                        "type": "string",
                        "description": "tab 上的文字选中时的颜色，仅支持十六进制颜色"
                    },
                    {
                        "name": "backgroundColor",
                        "type": "string",
                        "description": "tab 的背景色，仅支持十六进制颜色"
                    },
                    {
                        "name": "borderStyle",
                        "type": "string",
                        "default": "black",
                        "enum": [
                            "black",
                            "white"
                        ],
                        "description": "tabbar 上边框的颜色"
                    },
                    {
                        "name": "list",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": [
                                {
                                    "name": "pagePath",
                                    "type": "string",
                                    "description": "页面路径，必须在 pages 中先定义"
                                },
                                {
                                    "name": "text",
                                    "type": "string",
                                    "description": "tab 上按钮文字"
                                },
                                {
                                    "name": "iconPath",
                                    "type": "string",
                                    "description": "图片路径，icon 大小限制为 40kb，建议尺寸为 81px * 81px，不支持网络图片。"
                                },
                                {
                                    "name": "selectedIconPath",
                                    "type": "string",
                                    "description": "选中时的图片路径，icon 大小限制为 40kb，建议尺寸为 81px * 81px，不支持网络图片。"
                                }
                            ]
                        },
                        "description": "tab 的列表，详见 list 属性说明，最少 2 个、最多 5 个 tab"
                    },
                    {
                        "name": "position",
                        "type": "string",
                        "default": "bottom",
                        "enum": [
                            "bottom",
                            "top"
                        ],
                        "description": "tabBar 的位置"
                    },
                    {
                        "name": "custom",
                        "type": "boolean",
                        "default": "false",
                        "description": "自定义 tabBar"
                    }
                ]
            }
        }
    ]
}